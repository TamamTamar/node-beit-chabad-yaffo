{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": ".", // ⬅️ שורש הפרויקט, לא רק src
    "outDir": "dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": false,
  },
  "include": [
    "src",
    "config"
  ], // ⬅️ שתי התיקיות שמכילות קוד
  "exclude": [
    "node_modules",
    "dist"
  ]
}